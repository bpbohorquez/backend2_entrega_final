<div>
    <h1>Real Time Products View</h1>

    <h2> Agregar producto </h2>

    <iframe id="invisible" name="invisible" style="display:none;"></iframe>
    <form action="/products" method="post" target="invisible">

        <label for="tituloProducto">Titulo</label>
        <input type="text" id="tituloProducto" name="title" required="true">

        <label for="descripcionProducto">Descripcion</label>
        <input type="text" id="descripcionProducto" name="description" required="true">

        <label for="codigoProducto">Codigo</label>
        <input type="text" id="codigoProducto" name="code" required="true">

        <label for="precioProducto">Precio</label>
        <input type="text" id="precioProducto" name="price" required="true">

        <label for="statusProducto">Status</label>
        <input type="text" id="statusProducto" name="status" required="true">

        <label for="stockProducto">Stock</label>
        <input type="text" id="stockProducto" name="stock" required="true">

        <label for="categoriaProducto">Categoria</label>
        <input type="text" id="categoriaProducto" name="category" required="true">

        <button type="submit" onClick="window.location.reload();">Crear Producto</button>
    </form>

    <h2> Elimnar producto </h2>

    <form action="/products" method="delete">

        <label for="idProducto">Id</label>
        <input type="number" id="idProducto" name="id">


        <button type="submit" onClick="window.location.reload();">Eliminar Producto</button>
    </form>

    <h2> Products View: </h2>

    <div id="productsView">
        
    </div>


</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
